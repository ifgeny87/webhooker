{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"outDir": "build",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"src/**/*",
		"types/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"tests"
	]
}
